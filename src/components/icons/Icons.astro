---
// Definimos los props para todas las variantes de iconos
interface Props {
  class?: string;
  width?: string | number;
  height?: string | number;
  stroke?: string;
  fill?: string;
}

// Props por defecto
const { 
  class: className = "", 
  width = 24, 
  height = 24, 
  stroke = "currentColor",
  fill = "none"
} = Astro.props;
---

<svg 
  xmlns="http://www.w3.org/2000/svg" 
  width={width} 
  height={height} 
  viewBox="0 0 24 24" 
  fill={fill} 
  stroke={stroke} 
  stroke-width="2" 
  stroke-linecap="round" 
  stroke-linejoin="round" 
  class={className}
>
  <slot />
</svg> 