---
// Componente de sección de contacto
import { server } from '../actions/index.ts';

// Procesar el formulario si hay un envío
let formResult: { 
  errors: any; 
  success: boolean; 
  message: undefined | string 
} = { errors: undefined, success: false, message: undefined };

if (Astro.request.method === 'POST') {
  try {
    const formData = await Astro.request.formData();
    const result = await server.enviarContacto(formData);
    
    // Adaptamos el resultado al formato que espera nuestro componente
    if (result.error) {
      formResult.errors = { global: { message: result.error.message } };
    } else if (result.data) {
      formResult.success = result.data.success;
      formResult.message = result.data.message;
    }
  } catch (error) {
    console.error('Error al procesar el formulario:', error);
    formResult.errors = { global: { message: 'Error al procesar el formulario' } };
  }
}

const { errors, success, message } = formResult;
